post_install() {
    which MSVCR120.dll
    if [ ! $? = 0 ]; then
        echo "MSVCR120.dll is not found."
        echo "libmkldnn.dll depends on MSVCR120.dll indirectly through mklml.dll.";
        echo "Please install Visual C++ Redistributable Packages for Visual Studio 2013 from";
        echo "https://www.microsoft.com/en-us/download/details.aspx?id=40784 .";
    fi
}
